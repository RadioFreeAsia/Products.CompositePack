<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<tal:template_id metal:fill-slot="head_slot"
    define="request_url request/URL;
            global template_id python:request_url.split('/')[-1]" >

    <script type="text/javascript"
      tal:attributes="src string:${context/absolute_url}/cp_container/++resource++sarissa.js;"
      src="++resource++sarissa.js">
    </script>
    <script type="text/javascript"
      tal:attributes="src string:${context/absolute_url}/cp_container/++resource++cssQuery.js;"
      src="++resource++cssQuery.js">
    </script>
    <script type="text/javascript"
      tal:attributes="src
      string:${context/absolute_url}/cp_container/++resource++MochiKit.js;"
      src="++resource++MochiKit.js">
    </script>
    <script type="text/javascript"
      tal:attributes="src
      string:${context/absolute_url}/cp_container/++resource++kukit.js;"
      src="++resource++kukit.js">
    </script>
    <!-- ajaxslt-->
    <script type="text/javascript"
      tal:attributes="src
      string:${context/absolute_url}/cp_container/++resource++ajaxslt_misc.js;"
      src="++resource++ajaxslt_misc.js">
    </script>
    <script type="text/javascript"
      tal:attributes="src string:${context/absolute_url}/cp_container/++resource++ajaxslt_dom.js;" src="++resource++ajaxslt_dom.js">
    </script>
    <script type="text/javascript"
      tal:attributes="src string:${context/absolute_url}/cp_container/++resource++ajaxslt_xpath.js;"
      src="++resource++ajaxslt_xpath.js">
    </script>
    <script type="text/javascript"
      tal:attributes="src
      string:${portal_url}/composite_tool/uis/plone/cp_kukit_js;"
      src="cp_kukit_js">
    </script>
    <tal:comment replace="nothing">redefine template_id is needed to fix "design" tab highlight</tal:comment>
</tal:template_id>

<metal:cssslot fill-slot="css_slot">
    <style type="text/css" media="screen"
           tal:content="string: @import url($portal_url/compo.css);">
    </style>
</metal:cssslot>

<body>

  <div metal:fill-slot="main">

    <div class="compo_column">
    
      <div class="compo_left_column" tal:content="structure slot: first 'First slot'">
       First slot elements here
      </div>

      
      <div class="compo_right_column" tal:content="structure slot: second 'Second slot'">
      Second slot elements here
      </div>

      <div class="compo_clear" />
      
    </div>

  </div>    

  </body>
</html>
